        <Label layoutX="372.0" layoutY="21.0" prefHeight="30.0" prefWidth="182.0" style="-fx-text-fill: #003366;" text="Votre commande" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>


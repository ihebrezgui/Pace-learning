      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fitHeight="26.0" fitWidth="25.0" layoutX="726.0" layoutY="62.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@lens.png" />
         </image>
      </ImageView>
      <Button layoutX="646.0" layoutY="462.0" mnemonicParsing="false" onAction="#pdf" style="-fx-background-color: #66a3ff;" text="Télècharger PDF" textFill="#fafafa">

        <TextField fx:id="textFieldNom" layoutX="392.0" layoutY="170.0" prefWidth="200.0" promptText="Nom" style="-fx-background-color: #FFFFFF; -fx-border-color: #B0C4DE; -fx-border-width: 2px; -fx-border-radius: 5px;" />
        <TextField fx:id="textFieldTel" layoutX="392.0" layoutY="285.0" prefWidth="200.0" promptText="Téléphone" style="-fx-background-color: #FFFFFF; -fx-border-color: #B0C4DE; -fx-border-width: 2px; -fx-border-radius: 5px;" />

        <!-- Boutons d'action -->
        <HBox layoutX="401.0" layoutY="353.0" spacing="10" />

        <!-- Barre de recherche et boutons de tri -->
        <HBox layoutX="661.0" layoutY="264.0" spacing="10" />

        <!-- Bouton pour retourner -->
        <Button layoutX="764.0" layoutY="462.0" mnemonicParsing="false" onAction="#Retour" prefHeight="26.0" prefWidth="107.0" style="-fx-background-color: #66a3ff;" text="Retour" textFill="#faf7f7">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
          <TextField fx:id="textFieldRecherche" alignment="CENTER" layoutX="754.0" layoutY="60.0" onKeyPressed="#recherchecommande" prefHeight="30.0" prefWidth="126.0" promptText="Recherche" style="-fx-background-color: #FFFFFF; -fx-border-color: #B0C4DE; -fx-border-width: 2px; -fx-border-radius: 5px " />
          <Button layoutX="389.0" layoutY="372.0" mnemonicParsing="false" onAction="#updatecommande" prefHeight="26.0" prefWidth="107.0" style="-fx-background-color: #edf5fc;" text="Modifier" textFill="#ff9843">
              <font>
                  <Font name="System Bold" size="12.0" />
              </font>
          </Button>
          <Button layoutX="466.0" layoutY="372.0" mnemonicParsing="false" onAction="#suppcommande" prefHeight="26.0" prefWidth="107.0" style="-fx-background-color: #edf5fc;" text="Supprimer" textFill="#ff9843">
              <font>
                  <Font name="System Bold" size="12.0" />
              </font>
          </Button>
          <Button layoutX="381.0" layoutY="137.0" mnemonicParsing="false" onAction="#triasc" prefHeight="26.0" prefWidth="107.0" style="-fx-background-color: #edf5fc;" text="Tri croissant" textFill="#ff9843">
              <font>
                  <Font name="System Bold" size="12.0" />
              </font>
          </Button>
          <Button layoutX="484.0" layoutY="137.0" mnemonicParsing="false" onAction="#tridesc" prefHeight="26.0" prefWidth="107.0" style="-fx-background-color: #edf5fc;" text="Tri décroissant" textFill="#ff9843">
              <font>
                  <Font name="System Bold" size="12.0" />
              </font>
          </Button>
      <ImageView fitHeight="80.0" fitWidth="76.0" layoutX="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@pace-image.png" />

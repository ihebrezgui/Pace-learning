<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.formation.controllers.MessagingApp">
    <center>
        <VBox spacing="10">
            <TextArea fx:id="messageArea" prefHeight="200" editable="false"/>
            <TextField fx:id="inputField" promptText="Type your message here..."/>
            <Button text="Send" onAction="#sendMessage"/>
        </VBox>
    </center>
</BorderPane>
